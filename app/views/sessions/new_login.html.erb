<div class="login-page">
  <h1>Trainer Login</h1>

  <% if flash[:error] %>
    <p><%= flash[:error] %></p>
  <% end %>
  <div class="login-form">
    <%= form_for :session do |f| %>
      <%= f.label :email %>
      <%= f.text_field :email  %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit %>
    <% end %>
  </div>
</div>
